@model IEnumerable<Olympics.Models.Ticket>

@{
    ViewData["Title"] = "Ticket List";
}

<h2>Tickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Sprint Number</th>
            <th>Point Value</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Name</td>
                <td>@ticket.Description</td>
                <td>@ticket.SprintNumber</td>
                <td>@ticket.PointValue</td>
                <td>@ticket.Status</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Ticket</a>